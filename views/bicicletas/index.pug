extends ../layout 

block content
  br
  
  a.btn.btn-dark(href='/') Inicio
  br
  br

  a.btn.btn-primary(href='/bicicletas/create') Nueva Bicicleta
  br
  br 
     
  table.table.table-striped.table-hover
    thead
      tr
        th(scope='col') #
        th(scope='col') color 
        th(scope='col') modelo 
        th(scope='col') ubicacion
        th(scope='col') edicion 
        th(scope='col') borrado 
    tbody 
      each bici in bicis
        tr 
          td(scope='row')
            = bici.id
          td= bici.color
          td= bici.modelo
          td= bici.ubicacion
          td
            a.btn.btn-primary(href='bicicletas/' + bici.id + '/update') Editar 
          td
            form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                input(type='hidden' name='id' value= bici.id)
                button.link-button.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                    = 'Eliminar' 

