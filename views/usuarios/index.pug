extends ../layout 

block content
  a.btn.btn-success(href='/usuario/create') Nuevo Usuario 

  br
  br
  
  table.table
    thead
      tr
        th(scope='col') #
        th(scope='col') Nombre 
        th(scope='col') Email 
        th(scope='col') Verificando
        th(scope='col')
        th(scope='col') 
    tbody 
      each usuario in usuarios
        tr 
          td(scope='row')
            = usuario.id
          td= usuario.nombre
          td= usuario.email 
          td= usuario.verificando ? 'SI' : 'NO'
          td
            a(href='usuario/' + usuario.id + '/update') Editar 
          td
            form.inline(method='post' action='usuarios/' + bici.id + '/delete')
                input(type='hidden' name='id' value= usuario.id)
                button.link-button.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                    = 'Eliminar' 

